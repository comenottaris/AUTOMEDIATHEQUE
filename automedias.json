---
layout: default
---

<article class="automedia-page">
  <header>
    <h2>{{ page.name }}</h2>
    {% if page.url %}
      <p>
        <strong>URL :</strong>
        <a href="{{ page.url }}" target="_blank" rel="noopener noreferrer">{{ page.url }}</a>
      </p>
    {% endif %}
    <p class="meta">
      {% if page.country %}<strong>Pays :</strong> {{ page.country }} · {% endif %}
      {% if page.language %}<strong>Langue :</strong> {{ page.language }} · {% endif %}
      {% if page.platform %}<strong>Plateforme :</strong> {{ page.platform }}{% endif %}
    </p>
  </header>

  {% if page.description %}
    <p class="short-desc">{{ page.description }}</p>
  {% endif %}

  <section>
    <h3>Liens</h3>
    <ul>
      {% if page.socials %}
        {% for s in page.socials %}
          <li>
            <a href="{{ s.url }}" target="_blank" rel="noopener noreferrer">
              {{ s.name }}
            </a>
          </li>
        {% endfor %}
      {% else %}
        <li>Aucun lien secondaire renseigné.</li>
      {% endif %}
    </ul>
  </section>

  <section>
    <h3>Contacts</h3>
    <ul>
      {% if page.emails %}
        {% for e in page.emails %}
          <li><a href="mailto:{{ e }}">{{ e }}</a></li>
        {% endfor %}
      {% else %}
        <li>Aucun contact public renseigné.</li>
      {% endif %}
    </ul>
  </section>

  {% if page.tags %}
  <section>
    <h3>Tags</h3>
    <p>
      {% for t in page.tags %}
        <span class="tag">{{ t }}</span>
      {% endfor %}
    </p>
  </section>
  {% endif %}

  {% if content %}
  <section class="body">
    <h3>Présentation détaillée</h3>
    {{ content }}
  </section>
  {% endif %}
</article>
